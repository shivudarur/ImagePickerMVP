<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="image_picker_action_view_container" parent="MatchWidth">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/image_picker_view_horizontal_gap</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="image_picker_action_image" parent="Wrap">
        <item name="android:layout_marginRight">@dimen/image_picker_view_horizontal_gap</item>
    </style>

    <style name="image_picker_action_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>