<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/Match"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_image_picker_action_gallery_container"
        style="@style/image_picker_action_view_container">

        <ImageView
            style="@style/image_picker_action_image"
            android:src="@android:drawable/ic_menu_gallery"/>

        <TextView
            style="@style/image_picker_action_text"
            android:text="@string/chose_image"/>

    </LinearLayout>

    <include layout="@layout/view_separator_grey"/>

    <LinearLayout
        android:id="@+id/ll_image_picker_action_camera_container"
        style="@style/image_picker_action_view_container">

        <ImageView
            style="@style/image_picker_action_image"
            android:src="@android:drawable/ic_menu_camera"/>

        <TextView
            style="@style/image_picker_action_text"
            android:text="@string/capture_image"/>

    </LinearLayout>

    <include layout="@layout/view_separator_grey"/>

</LinearLayout>